# RANGER Command Console - Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED: Google Gemini API Key
# =============================================================================
# Used for: ADK agents, frontend chat, Site Analysis, Managed RAG
# Get yours at: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# REQUIRED: MapTiler API Key
# =============================================================================
# Used for: Map tiles and terrain rendering
# Get yours free at: https://cloud.maptiler.com/
VITE_MAPTILER_API_KEY=your_maptiler_api_key_here

# =============================================================================
# OPTIONAL: RANGER API Gateway (Legacy)
# =============================================================================
# Set to 'false' to skip API and use direct Gemini calls
VITE_USE_RANGER_API=true
VITE_RANGER_API_URL=http://localhost:8000

# =============================================================================
# ADK Orchestrator (Phase 4)
# =============================================================================
# Set to 'true' to use ADK multi-agent streaming
# When false, uses legacy aiBriefingService (direct Gemini or mock)
VITE_USE_ADK=true

# Local development (requires: python main.py)
VITE_ADK_URL=http://localhost:8000

# Production Cloud Run (uncomment to use deployed orchestrator)
# VITE_ADK_URL=https://ranger-coordinator-1058891520442.us-central1.run.app

# =============================================================================
# OPTIONAL: Fire Data Source
# =============================================================================
# true = Real NIFC data (default), false = Mock/simulated data
VITE_USE_REAL_FIRE_DATA=true

# =============================================================================
# Demo Mode
# =============================================================================
# Set to 'true' to skip backend API calls for suggested actions
# When true, action buttons use mock cascade only (no network errors)
# When false, attempts real backend calls with graceful fallback
VITE_DEMO_MODE=true

# =============================================================================
# Geospatial Services (ADR-013)
# =============================================================================
# TiTiler URL for serving Cloud-Optimized GeoTIFFs
# Local development: Run TiTiler in Docker
# Production: Cloud Run deployment
VITE_TITILER_URL=http://localhost:8080

# Production Cloud Run (uncomment when deployed)
# VITE_TITILER_URL=https://ranger-titiler-xxxxx.run.app

# COG Assets bucket (for signed URL generation)
VITE_GEOSPATIAL_BUCKET=ranger-geospatial-dev
