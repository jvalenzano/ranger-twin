                    },
                    {
                        "id": "ec_4",
                        "resource": "Inventoried roadless areas",
                        "consideration": "Consistency with Roadless Area Conservation Rule"
                    },
                    {
                        "id": "ec_5",
                        "resource": "Research Natural Areas",
                        "consideration": "Potential to affect research values"
                    },
                    {
                        "id": "ec_6",
                        "resource": "Archaeological sites, historic properties",
                        "consideration": "NHPA Section 106 compliance"
                    },
                    {
