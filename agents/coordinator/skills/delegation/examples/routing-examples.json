        "requires_synthesis": false
      }
    },
    {
      "name": "Timber Salvage Query",
      "input": {
        "query": "How much merchantable timber can we salvage from the high severity areas?",
        "context": {}
      },
      "expected_output": {
        "target_agent": "cruising-assistant",
        "confidence_min": 0.80,
        "requires_synthesis": false
      }
    },
    {
      "name": "Portfolio Triage Query",
      "input": {
        "query": "Which fires in our portfolio need the most attention?",
        "context": {}
      },
      "expected_output": {
        "target_agent": "coordinator",
        "confidence_min": 0.85,
        "requires_synthesis": false
      }
    },
    {
      "name": "Greeting Query",
      "input": {
        "query": "Hello, what can you help me with?",
        "context": {}
      },
      "expected_output": {
        "target_agent": "coordinator",
        "confidence_min": 0.60,
        "requires_synthesis": false
      }
    },
    {
