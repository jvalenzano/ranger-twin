# =============================================================================
# Cedar Creek Digital Twin - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Google Cloud Platform
# -----------------------------------------------------------------------------
GCP_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-east4
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=postgresql://cedar_creek:${POSTGRES_PASSWORD}@localhost:5432/cedar_creek_twin

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000
VITE_MAPLIBRE_STYLE=https://api.maptiler.com/maps/dataviz-dark/style.json
VITE_MAPTILER_KEY=your-maptiler-key

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
# Enable/disable agents (useful for development)
ENABLE_BURN_ANALYST=true
ENABLE_TRAIL_ASSESSOR=true
ENABLE_TIMBER_CRUISER=false
ENABLE_COMPLIANCE_ADVISOR=false
ENABLE_RECOVERY_COORDINATOR=false

# Agent URLs (for inter-service communication)
BURN_ANALYST_URL=http://localhost:8001
TRAIL_ASSESSOR_URL=http://localhost:8002
TIMBER_CRUISER_URL=http://localhost:8003
COMPLIANCE_ADVISOR_URL=http://localhost:8004
RECOVERY_COORDINATOR_URL=http://localhost:8005

# -----------------------------------------------------------------------------
# Cedar Creek Fire Context
# -----------------------------------------------------------------------------
CEDAR_CREEK_FIRE_ID=cedar-creek-2022
DEFAULT_FIRE_ID=cedar-creek-2022

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Security (Production Only)
# -----------------------------------------------------------------------------
# SECRET_KEY=your-secret-key-for-jwt
# CORS_ORIGINS=https://your-domain.com
